// 组件需要用到的时候引用

// 背景图
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
    
// 文字不折行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 扩展小图标点击区域
extend-click()
  position: relative
  &:before
    content: ""
    position: absolute
    top: -20px
    left: -20px
    right: -20px
    bottom: -20px